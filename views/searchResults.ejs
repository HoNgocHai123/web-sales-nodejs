<!-- views/searchResults.ejs -->
<section class="product">
    <div class="container mt-3">
      <div class="p-3 text-center">
        <h1>Sản phẩm của chúng tôi</h1><br>
      </div>
         
      <div class="row" style="margin-left: 40px; ">
        <% data.searchResults.forEach(product => { %>
          <div class="col-md-3 ">
              <div <%= product.id %> class="card tong" style="width:250px;object-fit: cover;">
           <img  class="card-img-top product" src="<%= product.image %>" alt="Card image" style="height: 180px; width: 140px; margin-left: 50px;">
                  <div class="card-body">
                    <h4><%= product.username %></h4>
                    <p style="color: red;"><b><%= product.price %></b></p>
                    <a href="/getproductDetail/<%= product.id %>" class="btn btn-primary">Chi Tiết</a>
                  </div>
                </div>
          </div>
          <% }) %>  
        </div>
    </div>
    
        </section>
    

   
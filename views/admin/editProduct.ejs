
<form class="w-75 mx-auto mt-4" method="POST" action="/update-product" enctype="multipart/form-data">
    <h2>Edit Product</h2>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Name</label>
      <input
      style="width: 80%;"
        type="text"
        class="form-control"
        id="exampleFormControlInput1"
        name="username"
        value="<%= data.product.username%>"
      />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Category</label>
      <input
      style="width: 80%;"
  
        type="text"
        class="form-control"
        id="exampleFormControlInput1"
        name="category"
        value="<%= data.product.category%>"
        
      />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Price</label>
      <input
      style="width: 80%;"
  
        type="text"
        class="form-control"
        id="exampleFormControlInput1"
        name="price"
        value="<%= data.product.price%>"

      />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Image</label>
      <input type="file" name="image" />
      <img
            style="width: 100px; height: 100px; object-fit: cover"
            src="<%= data.product.image %>"
            alt=""
          />
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label"
        >Description</label
      >
      <textarea
      style="width: 80%;"
  
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="3"
        name="description"

      ></textarea>
    </div>
    <input type="hidden" name="id" value="<%= data.product.id%>">
    <button type="submit" class="btn btn-primary">Edit</button>
  </form>
  <style>
    body {
    margin: 0;
  }
  
  .sidebar {
    width: 25%;
    background-color: #dedbdb;
    position: fixed;
    height: 100%;
    overflow: auto;
  }
  
  .sidebar a {
    display: block;
    color: #000;
    padding: 8px 16px;
    text-decoration: none;
    font-size: 19px;
  }
  
  .sidebar a.active {
    background-color: #04AA6D;
    color: white;
  }
  
  .sidebar a:hover:not(.active) {
    background-color: #555;
    color: white;
  }
  
  .content {
    margin-left: 25%;
    padding: 1px 16px;
    height: 1000px;
  }
  .custom-link {
    color: white; /* Đảm bảo màu liên kết là trắng */
    text-decoration: none; /* Gỡ bỏ gạch chân */
}

.custom-link i {
    margin-right: 10px; /* Khoảng cách giữa biểu tượng và văn bản */
}

  </style>
<form class="w-75 mx-auto mt-5" method="POST" action="/update-category">
    <h2>Edit Category</h2>
    <div class="mb-3">
      <label for="exampleFormControlInput1" class="form-label">Thêm danh mục:</label>
      <input style="width: 80%;" 
      type="text" class="form-control" 
      id="exampleFormControlInput1" 
      name="username"
      value="<%= data.category.username%>"
      />
    </div> <br>
